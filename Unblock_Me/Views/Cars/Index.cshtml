@model IEnumerable<Unblock_Me.Models.Car>

@{
    ViewData["Title"] = "Index";
}

<h1>All cars registered</h1>

<p>
    <a asp-action="Create">Add a new car</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LicencePlate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Maker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Colour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlockedLicencePlate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlockedByLicencePlate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LicencePlate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Maker)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Colour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlockedLicencePlate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlockedByLicencePlate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LicencePlate">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LicencePlate">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LicencePlate">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
